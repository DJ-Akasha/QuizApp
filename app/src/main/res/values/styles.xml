<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#A4C639</item>
        <item name="colorPrimaryDark">#827717</item>
        <item name="colorAccent">#A4C639</item>
        <item name="colorButtonNormal">#A4C639</item>
    </style>

    <!-- Style for Question Headers -->
    <style name="HeaderTextStyle">
        <item name="android:textColor">#827717</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <!-- Style for Questions -->
    <style name="Questions">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#827717</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>
